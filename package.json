{
  "name": "plant-reader",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "install:all": "pnpm install",
    "start": "pnpm --filter plant-reader-app start"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.15.5",
  "workspaces": [
    "packages/lib/*",
    "packages/services/*"
  ]
}
